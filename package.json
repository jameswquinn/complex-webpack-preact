{
  "name": "preact-webpack-app",
  "version": "1.0.0",
  "description": "A Preact application with Webpack configuration.",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && webpack --mode production",
    "start": "webpack serve --mode development",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css}'"
  },
  "dependencies": {
    "preact": "^10.5.13",
    "preact-compat": "^3.19.0",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.21.0",
    "@babel/preset-react": "^7.21.0",
    "@babel/preset-typescript": "^7.21.0",
    "babel-loader": "^8.2.5",
    "compression-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "dotenv-webpack": "^8.0.0",
    "favicons-webpack-plugin": "^7.0.0",
    "fork-ts-checker-webpack-plugin": "^7.0.0",
    "html-webpack-plugin": "^5.8.0",
    "imagemin-webpack-plugin": "^7.1.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss-loader": "^7.3.2",
    "terser-webpack-plugin": "^5.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.12.0",
    "webpack-bundle-analyzer": "^5.0.0",
    "webp-webpack-plugin": "^2.0.0",
    "rimraf": "^5.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/preact-webpack-app.git"
  },
  "author": "Your Name",
  "license": "MIT"
}
